<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CheckStatus"
    tools:showIn="@layout/app_bar_check_status">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:contentDescription="todo"
                app:srcCompat="@drawable/check_status" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="60dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Check Status"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/prob_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/problem_title"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:textSize="18sp"
                android:text=""
                android:textColor="@android:color/background_dark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/prob_Desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/problem_Description1"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/prob_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/problem_loc"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/prob_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/problem_status"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <Button
                android:id="@+id/ChangeStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="Change Status"
                android:textStyle="bold"
                android:onClick="onClickChangeStatus"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>